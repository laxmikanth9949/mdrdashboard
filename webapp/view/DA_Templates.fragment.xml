<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog 
		id="templatesDialog" 
		title="Select Template" 
		confirm="handleTemplateClose" 
		growingThreshold="20" 
		cancel="handleTemplateClose"
		search="onSearchTemplates"
		multiSelect="false" 
		items="{templates>/}">
		<items>
			<StandardListItem title="{templates>name}" description="{templates>desc}" type="Active"/>
		</items>
	</SelectDialog>
</core:FragmentDefinition>